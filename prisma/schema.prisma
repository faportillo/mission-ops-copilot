generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Outbox Event Table
model OutboxEvent {
  id          String @id @default(cuid())
  type        String
  topic       String
  key         String?
  headers     Json?
  payload     Json
  availableAt DateTime  @default(now())
  createdAt   DateTime  @default(now())
  processed_at DateTime?
  retries     Int     @default(0)
  lastError   String?
}

// New model to register spacecraft
model Spacecraft {
  id          String   @id @default(cuid())
  name        String
  missionType String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  spacecraftConfig SpacecraftConfig?
}

// Per-spacecraft configuration stored as JSONB
model SpacecraftConfig {
  id           String    @id @default(cuid())
  spacecraftId String    @unique
  config       Json
  status       String    @default("approved")
  source       String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  spacecraft   Spacecraft @relation(fields: [spacecraftId], references: [id])
}

model TelemetrySnapshot {
  id            String   @id
  spacecraftId  String
  timestamp     DateTime
  parameters    Json

  @@index([spacecraftId, timestamp])
}

model MissionEvent {
  id            String   @id
  spacecraftId  String
  timestamp     DateTime
  type          String
  severity      String
  message       String
  metadata      Json?

  @@index([spacecraftId, timestamp])
}

model OpsDocument {
  id           String   @id @default(cuid())
  spacecraftId String?
  title        String
  category     OpsDocumentCategory @default(general)
  content      String
  tags         String[]
  publishedAt  DateTime @default(now())
}

enum OpsDocumentCategory {
  operations_procedure
  anomaly_report
  spacecraft_configuration
  mission_policy
  telemetry_definition
  mission_planning
  maneuver_record
  conjunction_assessment
  system_design
  operations_log
  external_communication
  general
}
model TelemetryAnomaly {
  id           String   @id
  spacecraftId String
  timestamp    DateTime
  parameter    String
  value        Json
  severity     String
  description  String
  detectedAt   DateTime @default(now())
  windowStart  DateTime?
  windowEnd    DateTime?

  @@index([spacecraftId, timestamp])
  @@unique([spacecraftId, parameter, timestamp])
}


